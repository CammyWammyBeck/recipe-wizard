# Production Environment Variables for Recipe Wizard API
# Copy this to .env.production and fill with real values (NEVER commit to git)

# ===== DATABASE CONFIGURATION =====
# Heroku provides this automatically as DATABASE_URL
# Format: postgresql://user:password@hostname:port/database
DATABASE_URL=postgresql://username:password@hostname:port/recipewizard

# ===== AUTHENTICATION & SECURITY =====
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=REPLACE_WITH_STRONG_SECRET_KEY_32_CHARS_MIN
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days (in minutes)

# ===== PRODUCTION SETTINGS =====
# CRITICAL: Set to False in production
DEBUG=False
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ===== EXTERNAL SERVICES =====
# OpenAI API for LLM services
OPENAI_API_KEY=sk-your-openai-api-key-here
DEFAULT_MODEL=gpt-4o-mini

# ===== OPTIONAL: REDIS FOR RATE LIMITING =====
# Heroku Redis add-on provides this as REDIS_URL
REDIS_URL=redis://username:password@hostname:port

# ===== CORS ORIGINS =====
# Add your production domains here
ALLOWED_ORIGINS=https://your-app-domain.com,exp://your-expo-app

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== SECURITY =====
# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session security
SECURE_COOKIES=True
CSRF_PROTECTION=True